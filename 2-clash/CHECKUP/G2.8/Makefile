##I----> #--------------------------------------------------------------------#
         # Flag nächstes mal bitte als CFLAGS statt OPTIONS definieren.      #
         #-------------------------------------------------------------------#/

.PHONY: all
all: clash

clash: clash-2.c 
	gcc $(OPTIONS) clash-2.c .clash/plist.c -o clash

##I----> #--------------------------------------------------------------------#
         # plist.h, plist.c fehlen als Abhängigkeiten (-0.5)                  #
         #-------------------------------------------------------------------#/

##I----> #--------------------------------------------------------------------#
         # .clash/plist.c -> no such file or directory(-0.5)                  #
         #-------------------------------------------------------------------#/
.PHONY: clean
clean:
	rm  clash

